{
  "extends": "./node_modules/gts/",
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parserOptions": {
        "jsxPragma": "h"
      },
      "rules": {
        "@typescript-eslint/no-duplicate-enum-values": "off"
      }
    },
    {
      "files": ["gulpfile.js", "webpack.config.js"],
      "rules": {
        "node/no-unpublished-require": "off"
      }
    },
    {
      "files": ["**/*.test.ts", "vitest.config.ts"],
      "rules": {
        "node/no-unpublished-import": "off"
      }
    }
  ]
}
